{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "lib": ["dom", "es2017", "dom.iterable"],
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "types": ["node", "jest", "react", "@playwright/test"]
  },
  "exclude": ["**/**.stories.*", "src/stories/**", "src/components/_beta/**", "**/*.figma.ts"],
  "include": ["src/**/*", "types/**/*.d.ts"]
}
